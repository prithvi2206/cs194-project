<!-- views/partials/messages_view.ejs -->

<div class="modal fade" id="messageViewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="jobAddForm" role="form" method="post" action="/jobs/edit" enctype="multipart/form-data">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Edit Details
            </h4>
          </div>
          <div class="modal-body">

            <!-- hidden form field with application id -->
            <div class="form-group">
              <input type="hidden" name="appid" class="form-control" value="<%= data["app"].id %>">
            </div>

           <div class="form-group">
            <label>Company Name</label>
            <input name="company" class="form-control" value="<%= data["app"].get("company") %>">
          </div>
          <div class="form-group">
            <label>Position Title</label>
            <input name="position" class="form-control" value="<%= data["app"].get("title") %>">
          </div>
          <div class="form-group">
            <label>Application Status</label>
            <select class="form-control" name="status" value="<%= data["app"].get("status") %>">
              <option value="not_applied">Not Applied</option>
              <option value="applied">Applied</option>
              <option value="interview">Interview</option>
              <option value="offer">Offer</option>
              <option value="no_offer">No Offer</option>
            </select>
          </div>
          <div class="form-group">
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="desc" class="form-control" rows="3">
            <% if (data["app"].get("description")) { %>
            <%= data["app"].get("description") %>
            <% } %>
            </textarea>
          </div>
        </div>
        <div class="modal-footer">
          <input id="jobAddButton" type="submit" class="btn btn-custom">
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->  