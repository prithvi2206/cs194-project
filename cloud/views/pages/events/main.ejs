<!-- views/pages/events.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../partials/head %>
  <link rel="stylesheet" href="css/calendar.css">
</head>

<body>
  <div id="wrapper">

    <header>
      <% include ../../partials/header %>
    </header>

    <main>
      <div id="page-wrapper">

        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">
                Events <small>Calendar Overview</small>
              </h1>
<!--               <ol class="breadcrumb">
                <li class="active">
                  <i class="fa fa-calendar"></i> Events
                </li>
              </ol> -->
            </div>
          </div>

          <!-- Add events -->
          <div class="row">
            <div class="col-lg-12">
              <div class="btn-group">
                <!-- quick add form -->
                <form role="form" method="post" action="/events/quickadd" 
                onsubmit="return validate_quick_add()" name="quickAddForm" class="form-inline">
                  <div class="form-group">
                    <label for="appselect">Application </label>
                    <select class="form-control" id="appselect" name="appselect">
                      <option value="0" >None</option>
                      <% for(var i=0; i<apps.length; i++) {%>
                      <option value=<%= apps[i].id %> ><%= apps[i].get("title") %> at <%= apps[i].get("company") %></option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <input size="50" name="summary" class="form-control" placeholder="Interview with Google at 10am tomorrow">
                    <button type="submit" class="btn btn-default">Quick Add</button>
                  </div>
                </form>
              </div>

              <!-- normal event add -->
              <div class="btn-group">
                <button class="btn btn-primary" data-toggle="modal" data-target="#newEventModal">Add Event</button>
              </div>
            </div>
            <br>
          </div>

          <div class="row">
            <hr>
          </div>

          <!-- CALENDAR -->
          <div class="row">
            <div class="col-lg-12">
              <div id="calendar">
                loading...</div>
              </div>
            </div>

          </div>
          <!-- /.container-fluid -->
        </div>
      </main>

    </div>

    <add>
      <% include ./event_add %>
    </add>

    <footer>
      <% include ../../partials/footer %>
    </footer>

  </body>
  </html>

