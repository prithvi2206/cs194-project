<!-- views/pages/profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body>
  <div id="wrapper">

    <header>
      <% include ../partials/header %>
    </header>

    <main>
      <div id="page-wrapper">

        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">
                Profile <!-- <small> Edit</small>-->
              </h1>
              <ol class="breadcrumb">
                <li class="active">
                  <i class="fa fa-user"></i> Edit Profile
                </li>
              </ol>
            </div>
          </div>

          <alerts>
            <% include ../partials/alerts %>
          </alerts>

          <div class="row">

            <div class="col-lg-6">
              <form name="profileUpdateForm" role="form" onsubmit="return validate_profile()" method="post" action="/profile/update" enctype="multipart/form-data">

                <div class="form-group">
                  <label>Email</label>
                  <input name="email" class="form-control" value="<%= user.get("email") %>" disabled>
                </div>
                <div class="form-group">
                  <label>First Name</label>
                  <input name="first_name" class="form-control" 
                  <% if (!user.get("firstName")) { %>
                  placeholder="John" <% } else { %> value="<%= user.get("firstName") %>" <% }%> >
                </div>
                <div class="form-group">
                  <label>Last Name</label>
                  <input name="last_name" class="form-control" 
                  <% if (!user.get("lastName")) { %>
                  placeholder="Doe" <% } else { %> value="<%= user.get("lastName") %>" <% }%> >
                </div>
                <div class="form-group">
                  <label for="password" class="control-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group">
                  <label for="password_conf" class="control-label">Confirm Password</label>
                  <input type="password" class="form-control" id="password_conf" name="password_conf">
                </div>

                <div class="form-group">
                  <input id="profileUpdateButton" type="submit" class="btn btn-default" value="Update Profile">
                </div>

              </form>
            </div>

          </div>

        </div>
        <!-- /.container-fluid -->
      </div>
    </main>

  </div>

  <footer>
    <% include ../partials/footer %>
  </footer>

</body>
</html>

